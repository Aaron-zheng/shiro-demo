<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
	http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

    <bean id="shiroRealm" class="com.sightcorner.shiro.util.ShiroRealmImpl"/>

    <bean id="shiroCacheManager" class="org.apache.shiro.cache.MemoryConstrainedCacheManager"/>

    <bean class="org.apache.shiro.spring.LifecycleBeanPostProcessor"/>

    <bean class="org.springframework.aop.framework.autoproxy.DefaultAdvisorAutoProxyCreator"/>

    <bean id="securityManager" class="org.apache.shiro.web.mgt.DefaultWebSecurityManager">
        <property name="realm" ref="shiroRealm"/>
        <property name="cacheManager" ref="shiroCacheManager"/>
    </bean>


    <bean id="chainDefinitionsSource" class="com.sightcorner.shiro.util.ChainDefinitionsSource">
        <property name="filterChainDefinitions">
            <value>
                /xxx = anon
                /login = anon
                /logout = anon
            </value>
        </property>
    </bean>

    <bean id="shiroFilter" class="org.apache.shiro.spring.web.ShiroFilterFactoryBean">
        <property name="securityManager" ref="securityManager"/>
        <property name="loginUrl" value="/loginPage"/>
        <property name="successUrl" value="/indexPage"/>
        <property name="filterChainDefinitionMap" ref="chainDefinitionsSource"/>
        <property name="filters">
            <map>
                <entry key="authc">
                    <bean class="com.sightcorner.shiro.filter.ShiroFormAuthenticationFilter"/>
                </entry>
                <entry key="csrf">
                    <bean class="com.sightcorner.shiro.filter.ShiroCsrfFilter"/>
                </entry>
            </map>
        </property>
    </bean>

</beans>